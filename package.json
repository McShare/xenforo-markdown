{
  "name": "xenforo-markdown",
  "version": "1.0.0",
  "description": "Simple alternative implementation of Markdown in XenForo",
  "main": "xf-markdown.ts",
  "scripts": {
    "build": "esbuild xf-markdown.ts --bundle --outfile=dist/xf-markdown.js && uglifyjs dist/xf-markdown.js -c -m --no-annotations --output dist/xf-markdown.min.js && lessc markdown.less -x > dist/markdown.min.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/McShare/xenforo-markdown.git"
  },
  "keywords": [
    "markdown",
    "xenforo"
  ],
  "author": "Subilan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/McShare/xenforo-markdown/issues"
  },
  "homepage": "https://github.com/McShare/xenforo-markdown#readme",
  "dependencies": {
    "jquery": "^3.6.0",
    "lessc": "^1.0.2",
    "prismjs": "^1.27.0",
    "showdown": "^2.0.3",
    "underscore": "^1.13.4",
    "xss": "^1.0.11"
  },
  "devDependencies": {
    "@types/jquery": "^3.5.14",
    "@types/prismjs": "^1.26.0",
    "@types/showdown": "^1.9.4",
    "@types/underscore": "^1.11.4",
    "esbuild": "^0.14.25",
    "uglify-js": "^3.15.3"
  }
}
